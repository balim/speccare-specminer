<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.michaelszymczak.speccare.specminer"/>

    <bean id="filesystemFeatureFilesRetriever" class="com.michaelszymczak.speccare.specminer.specificationprovider.FilesystemFeatureFilesRetriever">
        <constructor-arg ref="resultLocator"/>
    </bean>

    <bean id="resultSource" class="com.michaelszymczak.speccare.specminer.specificationprovider.LocatorBasedResultSource">
        <constructor-arg ref="resultLocator"/>
    </bean>

    <bean id="partialResult" class="com.michaelszymczak.speccare.specminer.cucumber.DeterminableCumulativeCucumberReport">
        <constructor-arg ref="resultSource"/>
    </bean>

    <bean id="finalResult" class="com.michaelszymczak.speccare.specminer.core.ScenarioFinalResult">
        <constructor-arg ref="determinableScenarioByNameFinder"/>
        <constructor-arg ref="partialResult"/>
    </bean>

    <bean id="textFragmentProvider" class="com.michaelszymczak.speccare.specminer.specificationprovider.TextFragmentProvider"/>

    <bean id="featuresCreator" class="com.michaelszymczak.speccare.specminer.specificationprovider.FeaturesCreator">
        <constructor-arg index="0" ref="textFragmentProvider"/>
        <constructor-arg index="1" ref="filesystemFeatureFilesRetriever"/>
    </bean>

    <bean id="scenariosCreator" class="com.michaelszymczak.speccare.specminer.specificationprovider.GherkinScenarioProvider">
        <constructor-arg index="0" ref="textFragmentProvider"/>
        <constructor-arg index="1" ref="featuresCreator"/>
    </bean>

    <bean id="determinableScenarioByNameFinder" class="com.michaelszymczak.speccare.specminer.specificationprovider.DeterminableScenarioByNameFinder">
        <constructor-arg ref="scenarioRepository"/>
    </bean>

    <bean id="scenarioRepository" class="com.michaelszymczak.speccare.specminer.repository.ProviderBasedScenarioRepository">
        <constructor-arg ref="scenariosCreator"/>
    </bean>

</beans>