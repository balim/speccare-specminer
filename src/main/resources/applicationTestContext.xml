<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <context:component-scan base-package="com.michaelszymczak.livingdocumentation"/>
    <context:property-placeholder location="classpath:app.test.properties"/>

    <bean id="featuresDir" class="com.michaelszymczak.livingdocumentation.specificationprovider.FeaturesTemporaryDirectory"/>

    <bean id="filesystemFeatureFilesRetriever" class="com.michaelszymczak.livingdocumentation.specificationprovider.FilesystemFeatureFilesRetriever">
        <constructor-arg ref="featuresDir"/>
    </bean>

    <bean id="textFragmentProvider" class="com.michaelszymczak.livingdocumentation.specificationprovider.TextFragmentProvider"/>

    <bean id="featuresCreator" class="com.michaelszymczak.livingdocumentation.specificationprovider.FeaturesCreator">
        <constructor-arg index="0" ref="textFragmentProvider"/>
        <constructor-arg index="1" ref="filesystemFeatureFilesRetriever"/>
    </bean>

    <bean id="scenariosCreator" class="com.michaelszymczak.livingdocumentation.specificationprovider.ScenariosCreator">
        <constructor-arg index="0" ref="textFragmentProvider"/>
        <constructor-arg index="1" ref="featuresCreator"/>
    </bean>

    <bean class="com.michaelszymczak.livingdocumentation.specificationprovider.ObjectScenarioRepository">
        <constructor-arg ref="scenariosCreator"/>
    </bean>



</beans>