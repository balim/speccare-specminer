<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <context:component-scan base-package="com.michaelszymczak.livingdocumentation"/>
    <context:property-placeholder location="classpath:app.prod.properties"/>

    <bean id="featuresDir" class="com.michaelszymczak.livingdocumentation.specificationprovider.FeaturesRealDirectory">
        <constructor-arg value="${pathToFeatureDir.absolutePath}"/>
    </bean>

    <import resource="classpath:applicationCommonContext.xml"/>

</beans>